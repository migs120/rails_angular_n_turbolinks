         <li><a href='#about'>About</a></li>
         
        <div class="pull-right user-info">
           <% if current_user %>
                        Hello <% link_to (current_user.name || current_user.email), edit_user_registration_path %><a href='#userEdit'> <%=(current_user.name || current_user.email)%><a>! <%= link_to "Sign out",             destroy_user_session_path, method: :delete %>
