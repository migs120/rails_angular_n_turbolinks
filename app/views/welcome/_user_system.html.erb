      </ul>
       <% if flash[:notice] %>
         <div onclick="hide()" id='flash' class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div onclick="hide()" id='flash'class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div onclick="hide()" id='flash'class="alert alert-warning">
           <button type="button" class="close"  data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>
       </div>
   <side class='col-1'></side>
   <script>
 
     function hide(){ $('.close').click($('#flash').hide()) }
    
   </script>